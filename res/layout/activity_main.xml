<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res/com.westsoft.headlines"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <com.headlines.view.ViewPagerIndicator
        android:id="@+id/id_indicator"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/btn_login"
        android:orientation="horizontal"
        hyman:visible_tab_count="4" >
    </com.headlines.view.ViewPagerIndicator>

    <!--
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
    -->

 
    <android.support.v4.view.ViewPager
        android:id="@+id/id_homeviewPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>
    
    <!-- <include layout="@layout/home_bottom_actionbar" /> -->

</LinearLayout>